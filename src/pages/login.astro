---
import MainLayout from '@/layouts/main.astro';

const nextParam = Astro.url.searchParams.get('next') || '/admin';
const hasError = Astro.url.searchParams.get('error') === '1';
---

<MainLayout content={{ title: 'Login' }}>
  <main class="py-12">
    <div class="max-w-md mx-auto p-8 bg-white/10 backdrop-blur-sm text-white rounded-xl shadow-2xl border border-white/20">
      <h1 class="text-2xl font-bold mb-4 bg-gradient-to-r from-white via-cyan-100 to-blue-100 bg-clip-text text-transparent">Unlock Admin</h1>
      {hasError && (
        <p class="mb-4 text-sm text-red-400">Login failed. Please check your passkey and try again.</p>
      )}
      <form action={`/api/admin-login`} method="POST" class="space-y-4">
        <input type="hidden" name="next" value={nextParam} />
        <div>
          <label for="passkey" class="block text-sm font-medium text-white/80">Passkey</label>
          <input
            type="password"
            id="passkey"
            name="passkey"
            required
            class="mt-1 block w-full px-3 py-2 bg-white/20 border border-white/30 rounded-md shadow-sm placeholder-white/60 text-white focus:outline-none focus:ring-cyan-400 focus:border-cyan-400 sm:text-sm"
          />
        </div>
        <button type="submit" class="w-full appearance-none py-2 px-4 bg-gradient-to-r from-cyan-600 to-blue-600 text-white font-semibold rounded-lg shadow-md hover:from-cyan-500 hover:to-blue-500 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-opacity-75 transition-all duration-300">
          Log In
        </button>
      </form>
      <p class="mt-4 text-center text-sm text-white/60">
        You will be redirected to <code class="bg-white/20 px-2 py-1 rounded text-white/80">{nextParam}</code> after login.
      </p>
    </div>
  </main>
</MainLayout>
