{
  "name": "cygnus",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 4330",
    "dev:wrangler": "wrangler pages dev --proxy 4330 -- astro dev --port 4330",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "cf:dev": "astro dev --port 4330",
    "cf:deploy": "astro build && wrangler deploy",
    "cf:pages:deploy": "astro build && wrangler pages deploy ./dist",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:unit": "vitest",
    "db:setup": "wrangler d1 execute cygnus --local --file migrations/0001_init.sql",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/svelte": "^7.1.0",
    "@tailwindcss/vite": "^4.1.3",
    "@tonejs/midi": "^2.0.28",
    "@types/canvas-confetti": "^1.9.0",
    "abcjs": "^6.5.1",
    "astro": "^5.12.9",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.38.0",
    "lucide-react": "^0.539.0",
    "svelte": "^5.38.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.3",
    "tone": "^15.1.22",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.4",
    "@cloudflare/workers-types": "^4.20250816.0",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.47.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-svelte": "^3.11.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tw-animate-css": "^1.3.6",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.30.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,svelte,md,mdx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
