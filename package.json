{
  "name": "cygnus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.2",
  "workspaces": ["cygnus-web"],
  "scripts": {
    "nx": "nx",
    "dev": "nx run cygnus-web:dev",
    "dev:wrangler": "nx run cygnus-web:dev-wrangler",
    "build": "nx run cygnus-web:build",
    "preview": "nx run cygnus-web:preview",
    "astro": "nx run cygnus-web:astro",
    "cf:dev": "nx run cygnus-web:cf-dev",
    "cf:deploy": "nx run cygnus-web:cf-deploy",
    "cf:pages:deploy": "nx run cygnus-web:cf-pages-deploy",
    "test": "nx run cygnus-web:test",
    "test:ui": "nx run cygnus-web:test-ui",
    "test:unit": "nx run cygnus-web:test-unit",
    "db:setup": "nx run cygnus-web:db-setup",
    "lint": "nx run cygnus-web:lint",
    "lint:fix": "nx run cygnus-web:lint-fix",
    "format": "nx run cygnus-web:format",
    "format:check": "nx run cygnus-web:format-check",
    "api:serve": "nx run cygnus-api:serve",
    "api:worker": "nx run cygnus-api:worker",
    "api:lint": "nx run cygnus-api:lint",
    "api:format": "nx run cygnus-api:format",
    "api:test": "nx run cygnus-api:test",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nx": "^20.8.2"
  },
  "lint-staged": {
    "cygnus-web/**/*.{js,jsx,ts,tsx,astro,svelte,md,mdx}": [
      "cd cygnus-web && bunx prettier --write",
      "cd cygnus-web && bunx eslint --fix"
    ]
  }
}
