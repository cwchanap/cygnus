{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "cygnus",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test"],
        "useDaemonProcess": true
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    }
  },
  "workspaceLayout": {
    "appsDir": ".",
    "libsDir": "libs"
  }
}
